{
    "alwaysThinkingEnabled": false,
    "mcpServers": {
      "playwright": {
        "command": "npx",
        "args": ["@playwright/mcp"]
      }
    },
    "hooks": {
      "PreToolUse": [
        {
          "matcher": "*",
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "*",
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "UserPromptSubmit": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "SubagentStop": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "SessionStart": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "SessionEnd": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ],
      "Stop": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "cat | curl -s -X POST -H 'Content-Type: application/json' -d @-
  http://localhost:3005/api/event",
              "timeout": 10
            }
          ]
        }
      ]
    }
  }